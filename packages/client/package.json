{
  "name": "@retrom/client",
  "description": "The tauri wrapper for the retrom client",
  "type": "module",
  "scripts": {
  "dev": "pnpm vite --port 3000",
  "build": "copyfiles -u 2 \"web/dist/**/*\" dist",
  "build:desktop": "vite build --base=./",
  "tauri": "tauri",
  "format": "cargo fmt",
  "format:check": "cargo fmt --check",
  "lint": "cargo clippy",
  "lint:fix": "cargo clippy --fix"
},
  "devDependencies": {
    "@tauri-apps/cli": "2.4.1",
    "@types/node": "^20",
    "execa": "^9.3.0"
  }
}
